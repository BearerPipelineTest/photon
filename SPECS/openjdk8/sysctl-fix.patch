@@ -92,7 +92,9 @@
 # include <fcntl.h>
 # include <string.h>
 # include <sys/param.h>
-# include <sys/sysctl.h>
+# include <sys/syscall.h>
+#include <unistd.h>
+#include <linux/sysctl.h>
 # include <sys/ipc.h>
 # include <sys/shm.h>
 #ifndef __APPLE__
@@ -246,6 +248,25 @@ static char cpu_arch[] = "sparc";
 #define COMPILER_VARIANT "client"
 #endif
 
+static int sysctl(int *name,
+		int nlen,
+		void *oldval,
+		size_t *oldlenp,
+		void *newval,
+		size_t newlen)
+{
+	struct __sysctl_args args =
+	{
+		.name = name,
+		.nlen = nlen,
+		.oldval = oldval,
+		.oldlenp = oldlenp,
+		.newval = newval,
+		.newlen = newlen
+	};
+
+	return syscall(SYS__sysctl, &args);
+}
 
